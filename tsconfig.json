{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",                                  /* Specify ECMAScript target version. */
    "module": "commonjs",                                /* Specify module code generation. */
    "outDir": "./build",                                 /* Redirect output structure to the specified directory. */
    "resolveJsonModule": true,                           /* Enable importing .json files. */
    "esModuleInterop": true,                             /* Emit additional JS to ease CommonJS module imports. */
    "forceConsistentCasingInFileNames": true,            /* Ensure file imports use consistent casing. */
    "baseUrl": "./",                                     /* Base directory for module resolution. */

    /* Strict Type-Checking Options */
    "strict": true,                                      /* Enable all strict type-checking options. */
    
    /* Module Resolution */
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@enums/*": ["./src/enums/*"],
      "@routes/*": ["./src/routes/*"],
      "@schema/*": ["./src/schema/*"],
      "@root/*": ["*"]
    },

    /* Skip Type Checking */
    "skipLibCheck": true                                  /* Skip type checking all .d.ts files. */
  }
}
